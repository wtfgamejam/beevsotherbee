if(wrapper.enabled && pressed){
        playSound(getSound(26));
        actor.setVelocity(-90, 30);
        if((Utils.DEG * (actor.getAngle()) > -90))
{
            actor.rotate(-Utils.RAD * (randomInt(Math.floor(15), Math.floor(35))));
}

}
});

	}	      	
	
